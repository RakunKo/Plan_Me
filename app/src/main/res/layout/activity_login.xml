<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/login_text1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 나은 내일"
        android:textSize="23.98dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/agro_medium"
        android:layout_marginTop="145dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@id/login_text2_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/login_text2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="planme."
        android:textSize="41.96dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/agro_bold"
        app:layout_constraintTop_toBottomOf="@id/login_text1_tv"
        app:layout_constraintStart_toStartOf="@id/login_text1_tv"/>

    <ImageView
        android:id="@+id/login_kakao_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_kakao_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_text2_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"/>

    <ImageView
        android:id="@+id/login_google_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_google_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_kakao_btn"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>