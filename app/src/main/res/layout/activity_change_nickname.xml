<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/change_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 변경"
        android:textSize="24dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/change_nickname_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_gray"
        android:background="@drawable/schedule_backarrow"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintEnd_toStartOf="@id/change_nickname_tv"
        app:layout_constraintTop_toTopOf="@id/change_nickname_tv"
        app:layout_constraintBottom_toBottomOf="@id/change_nickname_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/change_nickname_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 닉네임을 입력해주세요"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="53dp"
        app:layout_constraintBottom_toTopOf="@id/change_nickname_et"
        app:layout_constraintTop_toBottomOf="@id/change_nickname_tv"
        app:layout_constraintStart_toStartOf="@id/change_nickname_back_btn"/>

    <EditText
        android:id="@+id/change_nickname_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_et"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="11dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_regular"
        android:hint="닉네임"
        android:paddingHorizontal="17dp"
        android:paddingVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_nickname_edit_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/change_nickname_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_gray"
        android:background="@drawable/category_et"
        android:text="변경 완료"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:paddingVertical="11dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="@id/change_nickname_et"
        app:layout_constraintEnd_toEndOf="@id/change_nickname_et"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>