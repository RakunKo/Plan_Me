<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/account_dialog_shape"
        android:layout_marginHorizontal="40dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/change_offline_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오프라인 전환"
            android:textColor="@color/dark_gray"
            android:textSize="24dp"
            app:layout_constraintVertical_bias="0.17"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/change_offline_ask_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_offline"
            android:textSize="16dp"
            android:textColor="@color/dark_gray"
            android:gravity="center_horizontal"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@id/change_offline_tv"
            app:layout_constraintStart_toStartOf="@id/change_offline_tv"
            app:layout_constraintEnd_toEndOf="@id/change_offline_tv"/>

        <LinearLayout
            android:id="@+id/change_offline_btn_lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="42dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/change_offline_ask_tv"
            app:layout_constraintStart_toStartOf="@id/change_offline_ask_tv"
            app:layout_constraintTop_toBottomOf="@id/change_offline_ask_tv">

            <Button
                android:id="@+id/change_offline_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/pretendard_bold"
                android:text="취소"
                android:textColor="@color/dark_gray"
                android:textSize="14dp" />

            <Button
                android:id="@+id/change_offline_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/pretendard_bold"
                android:text="확인"
                android:textColor="@color/dark_gray"
                android:textSize="14dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>