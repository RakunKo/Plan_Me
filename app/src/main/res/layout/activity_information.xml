<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/information_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="정보"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/information_opensource_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오픈소스 라이선스"
        android:textSize="18dp"
        android:layout_marginTop="51dp"
        android:textColor="@color/black"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/information_tv"/>

    <TextView
        android:id="@+id/infomaion_version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버전 정보"
        android:textSize="18dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/information_opensource_tv"/>

    <TextView
        android:id="@+id/information_producer_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제작자"
        android:textSize="18dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/infomaion_version_tv"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="24dp"
        app:tint="@color/white"
        android:src="@drawable/main_add_white"
        app:backgroundTint="@color/white_gray"
        android:visibility="gone"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting_fab_planner_btn"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_planner_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="24dp"
        app:tint="@color/white"
        android:src="@drawable/main_btn_planner"
        app:maxImageSize="35dp"
        app:backgroundTint="@color/white_gray"
        app:fabCustomSize="@dimen/design_fab_image_size"
        android:visibility="gone"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting_fab_timer_btn"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_timer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="24dp"
        app:tint="@color/white"
        android:src="@drawable/main_btn_timer"
        app:maxImageSize="35dp"
        app:backgroundTint="@color/white_gray"
        android:visibility="gone"
        app:fabCustomSize="@dimen/design_fab_image_size"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting_fab_mestory_btn" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_mestory_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="24dp"
        app:tint="@color/white"
        android:src="@drawable/main_btn_mestory"
        app:maxImageSize="35dp"
        android:visibility="gone"
        app:fabCustomSize="@dimen/design_fab_image_size"
        app:backgroundTint="@color/white_gray"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting_fab_setting_btn" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="56dp"
        app:backgroundTint="@color/dark_gray"
        app:tint="@color/white"
        app:maxImageSize="35dp"
        app:fabCustomSize="@dimen/design_fab_image_size"
        android:src="@drawable/main_btn_setting"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>