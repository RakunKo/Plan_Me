<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/consumer_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="고객센터"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/consumer_center_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/schedule_backarrow"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@id/consumer_center_tv"
        app:layout_constraintEnd_toStartOf="@id/consumer_center_tv"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/consumer_center_tv" />

    <TextView
        android:id="@+id/consumer_center_email_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일 문의"
        android:textSize="18dp"
        android:layout_marginTop="51dp"
        android:textColor="@color/black"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/consumer_center_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>