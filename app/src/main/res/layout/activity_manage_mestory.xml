<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/manage_mestory_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="me story 관리"
        android:textColor="@color/dark_gray"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manage_mestory_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/schedule_backarrow"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@id/manage_mestory_tv"
        app:layout_constraintEnd_toStartOf="@id/manage_mestory_tv"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/manage_mestory_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manage_mestory_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/manage_mestory_tv"
        tools:listitem="@layout/item_mestory" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/main_add_white"
        android:visibility="gone"
        app:backgroundTint="@color/white_gray"
        app:layout_constraintBottom_toTopOf="@id/setting_fab_planner_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:tint="@color/white" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_planner_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/main_btn_planner"
        android:visibility="gone"
        app:backgroundTint="@color/white_gray"
        app:fabCustomSize="@dimen/design_fab_image_size"
        app:layout_constraintBottom_toTopOf="@id/setting_fab_timer_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="35dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:tint="@color/white" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_timer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/main_btn_timer"
        android:visibility="gone"
        app:backgroundTint="@color/white_gray"
        app:fabCustomSize="@dimen/design_fab_image_size"
        app:layout_constraintBottom_toTopOf="@id/setting_fab_mestory_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="35dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:tint="@color/white" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_mestory_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/main_btn_mestory"
        android:visibility="gone"
        app:backgroundTint="@color/white_gray"
        app:fabCustomSize="@dimen/design_fab_image_size"
        app:layout_constraintBottom_toTopOf="@id/setting_fab_setting_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="35dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="56dp"
        android:src="@drawable/main_btn_setting"
        app:backgroundTint="@color/dark_gray"
        app:fabCustomSize="@dimen/design_fab_image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="35dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
