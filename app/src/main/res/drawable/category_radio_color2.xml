<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="5.45dp"/>
            <size android:width="28dp" android:height="26dp"/>
            <solid android:color="@color/sky_blue"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5.45dp"/>
                    <size android:width="28dp" android:height="26dp"/>
                    <solid android:color="@color/sky_blue"/>
                </shape>
            </item>
            <item android:drawable="@drawable/radio_ico_check" android:width="9dp" android:height="6dp" android:gravity="center"/>
        </layer-list>
    </item>
</selector>