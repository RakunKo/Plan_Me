<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--인터넷 사용 권한 설정-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--사진 접근 권한 설정-->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>

    <application
        android:name=".utils.GlobalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plan_Me"
        tools:targetApi="31">

        <receiver
            android:name=".utils.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_appkey" />

        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/google_app_id" />

        <meta-data
            android:name="com.google.android.gms.appstate.APP_ID"
            android:value="@string/google_app_id" />

        <meta-data
            android:name="com.google.android.gms.auth.api.signin.CLIENT_ID"
            android:value="@string/google_client_id" />

        <activity
            android:name=".ui.spalsh.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.LoginActivity">
        </activity>
        <!--카카오 로그인, 인가코드를 받기 위한 액티비티-->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="kakao55b1939dd22f9a5ef6176930e7a09231" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.mestory.MestoryActivity"/>

        <activity android:name=".ui.timer.TimerFocusActivity"/>
        <activity android:name=".ui.timer.TimerBreakActivity"/>
        <activity android:name=".ui.timer.TimerSettingActivity" />

        <activity android:name=".ui.main.MainActivity"/>

        <activity android:name=".ui.login.InitProfileActivity"/>

        <activity android:name=".ui.setting.SettingActivity"/>
        <activity android:name=".ui.setting.AccountActivity"/>
        <activity android:name=".ui.setting.ChangeNicknameActivity"/>
        <activity android:name=".ui.setting.ChangeTypeActivity"/>
        <activity android:name=".ui.setting.ManageMestoryActivity"/>
        <activity android:name=".ui.setting.ConsumerCenterActivity"/>
        <activity android:name=".ui.setting.TermsPoliciesActivity"/>
        <activity android:name=".ui.setting.InformationActivity"/>
        <activity android:name=".ui.setting.OpenSourceLisenceActivity"/>
        <activity android:name=".ui.setting.ProcessPoliciesActivity"/>
        <activity android:name=".ui.setting.ProducerActivity"/>
        <activity android:name=".ui.setting.UseTermsActivity"/>
        
        <activity android:name=".ui.add.ScheduleAddActivity"/>

    </application>

</manifest>